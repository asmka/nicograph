{
  "manifest_version": 3,
  "name": "Niconico Comment Grapher",
  "version": "1.1.1",
  "description": "ニコニコ動画のシークバー上に区間コメント数のグラフを描画します",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://www.nicovideo.jp/watch/*"
  ],
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "content_scripts": [
    {
      "matches": ["*://www.nicovideo.jp/watch/*"],
      "js": ["loader.js"],
      "run_at": "document_end"
    }
  ],
  "background": {},
  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["https://*/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
