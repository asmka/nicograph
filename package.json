{
  "name": "nicograph",
  "version": "1.0.3",
  "description": "ニコニコ動画のシークバー上に区間コメント数のグラフを描画するChrome拡張機能",
  "private": true,
  "scripts": {
    "clean": "rimraf release release.zip",
    "prebuild": "npm run clean",
    "build": "webpack -o release/js && ncp images/icons release/icons && ncp manifest.json release/manifest.json",
    "postbuild": "zip -r release.zip release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dff9th/nicograph.git"
  },
  "author": "dff9th",
  "license": "MIT",
  "volta": {
    "node": "16.13.0"
  },
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-plugin-html": "^6.2.0",
    "ncp": "^2.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
